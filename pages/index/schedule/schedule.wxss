/* pages/index/schedule/schedule.wxss */
.title{
  text-align: center;
  font-size: 40rpx;
  color: #70DBDB;
  margin-top: 80rpx;
}

.info{
  margin-top: 30rpx;
}

.amount{
  color: #bab8c0;
  font-size: 40rpx;
  
}

.details{
  color: #bab8c0;

}
.line{
  color: #bab8c0;
  border-top-style:dotted;
  border-width:10rpx;
  margin-left: 0rpx;
  margin-top:30rpx;
}

.flex-item {
  width: 95rpx;
  height: 100px;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
  flex-direction: column;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  padding-left: 2px;
  align-items: center;
}

.top {
  display: flex;
  flex-direction: row;
  margin-left: 35rpx;
  background-color: #d2e6b3;
  color: #7cba23;
}

.top-text {
  width: 100rpx;
  height: 35rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  align-items: center;
}

.scroll {
  height: 1200rpx;
  z-index: 101;
  position: fixed;
}

.left {
  width: 35rpx;
  height: 150rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  background-color: #d2e6b3;
  color: #7cba23;
  align-items: center;
}
